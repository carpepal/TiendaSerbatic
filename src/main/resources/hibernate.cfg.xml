<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="connection.url">jdbc:mariadb://localhost:3306</property>
    <property name="connection.username">root</property>
    <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.show_sql">true</property>


    <mapping class="com.example.tiendacarlos.entities.Categorias"/>
    <mapping class="com.example.tiendacarlos.entities.Configuracion"/>
    <mapping class="com.example.tiendacarlos.entities.Descuentos"/>
    <mapping class="com.example.tiendacarlos.entities.DetallesPedido"/>
    <mapping class="com.example.tiendacarlos.entities.Impuestos"/>
    <mapping class="com.example.tiendacarlos.entities.MetodosPago"/>
    <mapping class="com.example.tiendacarlos.entities.OpcionesMenu"/>
    <mapping class="com.example.tiendacarlos.entities.Pedidos"/>
    <mapping class="com.example.tiendacarlos.entities.Productos"/>
    <mapping class="com.example.tiendacarlos.entities.Proveedores"/>
    <mapping class="com.example.tiendacarlos.entities.Roles"/>
    <mapping class="com.example.tiendacarlos.entities.Usuarios"/>
    <mapping class="com.example.tiendacarlos.entities.Valoraciones"/>


  </session-factory>
</hibernate-configuration>